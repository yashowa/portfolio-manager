
<%- include("./layout/header") -%>
<h1>Book</h1>
<table id="table" class="table table-media table-striped table-bordered table-sm"
         data-entity="media" cellspacing="0" width="100%"
        data-toggle="table"
        data-pagination="true"
      data-unique-id="id"
        data-search="true">
        <% if(medias && medias.length > 0 ){ %>
          <thead>
            <tr>
                <th data-checkbox="true" data-entity='media'></th>
              <th <% if(medias && medias.length > 0 ){ %> data-sortable="true" <% } %> data-field="id"> Id</th>
              <th <% if(medias && medias.length > 0 ){ %> data-sortable="true" <% } %> data-field="name">Nom</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% medias.forEach(function(media){ %>
                <tr id="row-<%= media.id_media %>" <% if(media.is_active==0){ %> class='row-inactive';<% } %>>
                <td><input class="form-check-input" type="checkbox" data-entity='media' value='<%= media.id_media %>'/></td>
                <td class="td-id"><%= media.id_media %></td>
                <td class="td-name"><%= media.title %></td>
                <td>
                  <a class="btn btn-warning" href="/admin/media/<%= media.id_media %>"><i class="fa fa-edit"></i> Modifier</a>
                  <a class="btn btn-danger js-delete-action" data-entity='media' href="/media/<%= media.id_media %>/delete"><i class="fa fa-trash"></i> Supprimer</a>
                </td>
              </tr>
            <% }); %>
          </tbody>
        <% } else { %>
            <tr><td style="text-align:center">Aucun média enregistré</td></tr>
         <% } -%>
    </table>

   <% if(medias && medias.length > 0 ){ %>
    <table id="table-action-media" class="table-action table-striped table-bordered table-sm" cellspacing="0" width="100%"  >
      <tr>
        <td>
          <label>
              Pour la sélection
          <select name="select-action" id="select-action-media" class='media' disabled>
            <option disabled selected value> -- choisissez une option -- </option>
            <option value="enable">Activer la sélection</option>
            <option value="disable">Désactiver la sélection</option>
            <option value="deleteList">Supprimer la sélection</option>
          </select>
              </label>
        </td>
        <td><button id="validate-action-media" class ="validate-action btn btn-success media" data-entity='media' data-action="" disabled>Valider</button></td>
      </tr>
    </table>
  <% } -%>





















<%- include("./layout/footer") -%>